<Controls:MetroWindow
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:Objects="clr-namespace:TreasuresLand.Objects;assembly=TreasuresLand" x:Class="DrNadaTreasureLand.Windows.SalaryHistory"
                      ResizeMode="NoResize"
                      Title="Salary History"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="2"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      Height="287.001"
                      Width="369.333" FontSize="15">
    <Grid>
        <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Instructor Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Salary" Width="80" DisplayMemberBinding="{Binding Salary}"/>
                    <GridViewColumn Header="Paid" Width="80" DisplayMemberBinding="{Binding Paid}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Controls:MetroWindow>
    

